<?xml version="1.0" encoding="utf-8"?>
<webspace xmlns="http://schemas.sulu.io/webspace/webspace"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/webspace/webspace http://schemas.sulu.io/webspace/webspace-1.1.xsd">
    <!-- See: http://docs.sulu.io/en/latest/book/webspaces.html how to configure your webspace-->

    <name>Symfony Demo</name>
    <key>default</key>

    <localizations>
        <!-- See: http://docs.sulu.io/en/latest/book/localization.html how to add new localizations -->
        <localization language="nl" default="true"/>
        <localization language="en" />
    </localizations>

    <default-templates>
        <default-template type="page">default</default-template>
        <default-template type="home">homepage</default-template>
    </default-templates>

    <templates>
        <template type="search">search/search</template>
        <!-- See: http://docs.sulu.io/en/latest/cookbook/custom-error-page.html how to create a custom error page -->
        <template type="error">error/error</template>
    </templates>

    <navigation>
        <contexts>
            <context key="main">
                <meta>
                    <title lang="nl">Hoofdnavigatie</title>
                    <title lang="en">Main navigation</title>
                </meta>
            </context>
            <context key="footer_general">
                <meta>
                    <title lang="nl">Footer General</title>
                    <title lang="en">Footer General</title>
                </meta>
            </context>
            <context key="footer_support">
                <meta>
                    <title lang="nl">Footer Support</title>
                    <title lang="en">Footer Support</title>
                </meta>
            </context>
        </contexts>
    </navigation>

    <segments>
        <segment key="winter" default="true">
            <meta>
                <title lang="en">Winter</title>
            </meta>
        </segment>
        <segment key="summer" default="false">
            <meta>
                <title lang="en">Summer</title>
            </meta>
        </segment>
    </segments>

    <portals>
        <portal>
            <name>Symfony Demo</name>
            <key>default</key>

            <environments>
                <environment type="prod">
                    <urls>
                        <url>{host}/{localization}</url>
                        <url>{host}/{localization}/home</url>
                    </urls>
                </environment>
                <environment type="stage">
                    <urls>
                        <url>{host}/{localization}</url>
                        <url>{host}/{localization}/home</url>
                    </urls>
                </environment>
                <environment type="test">
                    <urls>
                        <url>{host}/{localization}</url>
                        <url>{host}/{localization}/home</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url>{host}/{localization}</url>
                        <url>{host}/{localization}/home</url>
                    </urls>
                </environment>
            </environments>
        </portal>
        <portal>
            <name>Symfony Second Demo</name>
            <key>second</key>

            <environments>
                <environment type="prod">
                    <urls>
                        <url>{host}/{localization}/second</url>
                        <url>{host}/{localization}/second/home</url>
                    </urls>
                </environment>
                <environment type="stage">
                    <urls>
                        <url>{host}/{localization}/second</url>
                        <url>{host}/{localization}/second/home</url>
                    </urls>
                </environment>
                <environment type="test">
                    <urls>
                        <url>{host}/{localization}/second</url>
                        <url>{host}/{localization}/second/home</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url>{host}/{localization}/second</url>
                        <url>{host}/{localization}/second/home</url>
                    </urls>
                </environment>
            </environments>
        </portal>
    </portals>
</webspace>
