                             data-paddingright="[0,0,0,0]"
                             data-paddingbottom="[10,10,10,10]"
                             data-paddingleft="[0,0,0,0]">{{ slider_item.title }}</div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>
