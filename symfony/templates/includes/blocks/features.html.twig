<section class="app_feature_area" id="feature">
    <div class="container">
        <div class="main_title">
            <h2>{{ content.title }}</h2>
            {{ content.text|raw }}
        </div>

        {% if content.featureItems is not empty %}
            <div class="row app_feature_inner">
                <div class="col-md-3">
                    <div class="app_feature_item_inner">
                        {% for feature_item in content.featureItems|slice(0, 2) %}
                        <div class="app_feature_item">
                            <div class="round_icon">
                                <i class="fa fa-{{ feature_item.icon }}"></i>
                            </div>
                            <sulu-link href="{{ feature_item.link }}">
                                <h4>{{ feature_item.title }}</h4>
                            </sulu-link>
                            {{ feature_item.text|raw }}
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="app_round_image">
                        <img class="round_c" src="{{ asset('build/demo/img/round-circle.png') }}">
                        <img class="app_mobile" src="{{ content.image.thumbnails['features-244x517'] }}" alt="{{ content.image.title }}">
                    </div>

                    {% for feature_item in content.featureItems|slice(2, 1) %}
                        <div class="app_feature_item app_middle">
                            <div class="round_icon">
                                <i class="fa fa-{{ feature_item.icon }}"></i>
                            </div>
                            <sulu-link href="{{ feature_item.link }}">
                                <h4>{{ feature_item.title }}</h4>
                            </sulu-link>
                            {{ feature_item.text|raw }}
                        </div>
                    {% endfor %}
                </div>
                <div class="col-md-3">
                    <div class="app_feature_item_inner left_feature">
                        {% for feature_item in content.featureItems|slice(3, 2) %}
                            <div class="app_feature_item">
                                <div class="round_icon">
                                    <i class="fa fa-{{ feature_item.icon }}"></i>
                                </div>
                                <sulu-link href="{{ feature_item.link }}">
                                    <h4>{{ feature_item.title }}</h4>
                                </sulu-link>
                                {{ feature_item.text|raw }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</section>
